# Discordia Bot Configuration
# Copy this file to .env and fill in your values

# Required: Your Discord bot token
DISCORDIA_DISCORD_TOKEN=your-bot-token-here

# Required: Your Discord server/guild ID
DISCORDIA_SERVER_ID=123456789012345678

# Optional: Message history context limit (default: 20, min: 1, max: 100)
DISCORDIA_MESSAGE_CONTEXT_LIMIT=20
